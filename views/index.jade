extends layout

append head
  style.
    html, body, #map-canvas {
        height: 100%;
        margin: 0px;
        padding: 0px
      }
  script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places")
  script(src='/javascripts/oms.min.js')
  script(src="/javascripts/map_points.js")


block content
  input#map-search.search-box(type="text", placeholder="search")
  .get-current-location @
  #map-canvas
  .ow-overlay.ow-closed
  .modal.ow-closed
  script(type="text/x-handlebars-template")#truckDetailsTemplate
    .close-modal X
    h1 {{ applicant }}
    p {{ address }}
    p {{ fooditems }}
    span
      a(href="{{ schedule }}") View Schedule
      |  (pdf)