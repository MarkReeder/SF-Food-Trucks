@import 'nib'
/*!
 * Geolocation icon from http://www.flaticon.com/free-icon/geolocation-symbol_23398
 * X icon from http://www.flaticon.com/free-icon/x-mark_1766
 */
body
  padding: 50px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
a
  color: #00B7FF;
h1
  margin-top: 0;

.search-box
  position: absolute;
  z-index: 1;
  top: 21px;
  left: 80px;
  width: 50%
  min-width: 250px;
  border: none;
  box-shadow: 3px 3px 0px rgba(0,0,0,0.7);
  font-size: 1.5em;
  padding: 0.4em 0.2em;

.get-current-location
  position: absolute;
  background: url('/images/geolocation.svg') no-repeat top right;
  background-size: contain;
  z-index: 1;
  top: 23px;
  left: 50%;
  width: 41px;
  height: 41px;
  margin-left: 100px;
  font-size: 2.5em;
  cursor: pointer;
  overflow: hidden;
  text-indent: -9999em;
  &.searching
    background-image: url('/images/geolocation-searching.svg');

.no-geolocation .get-current-location
  display: none;

.ow-overlay
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: #424242;
  opacity: 0.8;

.ow-closed
  display: none;

.close-modal
  display: none;

.modal
  position: fixed;
  z-index: 101;
  height: 100%;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 2.5%;
  overflow: auto;

  .close-modal
    display: block;
    position: fixed;
    right: 2.5%;
    top: 2.5%;
    background: url('/images/close.svg') no-repeat;
    cursor: pointer;
    overflow: hidden;
    text-indent: -9999em;
    width: 28px;
    height: 28px;